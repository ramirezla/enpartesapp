<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/colorPrimaryButton</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/my_button_color</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="SpinnerTextStyle">
        <item name="android:textSize">16sp</item> <!-- TamaÃ±o del texto -->
        <item name="android:textColor">@android:color/black</item> <!-- Color del texto -->
        <item name="android:padding">8dp</item> <!-- Espaciado interno -->
    </style>

    <style name="SelectButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/select_button_color</item>
        <item name="android:textColor">@color/my_high_contrast_text_color</item>
    </style>
</resources>